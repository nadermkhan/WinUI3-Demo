<Window x:Class="HelloWorldApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="HelloText" Text="Hello, World!" FontSize="32" HorizontalAlignment="Center" Margin="20"/>
            <Button x:Name="ClickMeButton" Content="Click Me!" HorizontalAlignment="Center" Click="OnButtonClick"/>
        </StackPanel>
    </Grid>
</Window>